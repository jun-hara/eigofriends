<div class="center-content">
  <h1>Reset Password</h1>
  <%= form_with url: password_reset_path do |form| %>
    <div class="mb-3">
      <%= form.label :email, class: "form-label"  %>
      <%= form.text_field :email, class: "form-control", placeholder: "email@site.com" %>
    </div>
    <div class="mb-3">
      <%= form.submit "Reset Password", class: "btn btn-dark" %>
    </div>
  <% end %>
</div>
